{% extends 'base.html.twig' %}

{% block title %}Réservation #{{ reservation.id }} - Health & Fitness{% endblock %}

{% block body %}
<div class="container">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-header">
            <h2 class="mb-0">Réservation #{{ reservation.id }}</h2>
        </div>
        <div class="card-body text-center">
            <p><strong>Utilisateur:</strong> {{ reservation.user.name }}</p>
            <p><strong>Service:</strong> {{ reservation.service.title }}</p>
            <p><strong>Date:</strong> {{ reservation.date|date('d/m/Y H:i') }}</p>
            <a href="{{ path('app_reservations') }}" class="btn btn-secondary">Retour aux réservations</a>
        </div>
    </div>
</div>
{% endblock %}
