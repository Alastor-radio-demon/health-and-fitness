{% extends 'base.html.twig' %}

{% block title %}{{ service.title }} - Health & Fitness{% endblock %}

{% block body %}
<div class="container">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body text-center">
            <h2>{{ service.title }}</h2>
            <p>{{ service.description }}</p>
            <p class="h4 text-success">{{ service.price }} DT</p>
            <a href="{{ path('app_services') }}" class="btn btn-secondary">Retour aux services</a>
        </div>
    </div>
</div>
{% endblock %}