{% extends 'base.html.twig' %}

{% block title %}Services - Health & Fitness{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4 text-center">Nos Services</h1>
    
    <div class="row">
        {% for service in services %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                    <img src="{{ service.image }}" class="img-fluid" alt="{{ service.title }}" style="max-height: 230px; object-fit: contain;">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ service.title }}</h5>
                    <p class="card-text">{{ service.description }}</p>
                    <p class="h5 text-success">{{ service.price }} DT</p>
                    <span class="badge bg-secondary">{{ service.duration }} min</span>
                    <span class="badge bg-info">{{ service.type }}</span>
                    <div class="mt-3">
                        <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-primary">Voir d√©tails</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}