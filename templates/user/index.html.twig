{% extends 'base.html.twig' %}

{% block title %}Utilisateurs - Health & Fitness{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Liste des Utilisateurs</h1>
    
    <div class="row">
        {% for user in users %}
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ user.name }}</h5>
                    <p class="card-text">{{ user.email }}</p>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">Voir profil</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}